
<%= render "header"%>

<div class="admin">

  <% if user_signed_in?%>
    <% if current_user.admin_flg? %>
      <div class="tab">
        <h2>一覧は管理者のみ表示されます</h2>
        
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "log_out_btn" %>
        <%= link_to 'ユーザー情報管理ページ', rails_admin_path, class: "admin_btn" %>
        
      </div>  

      <div class="karute_user">
        <h2>患者カルテ一覧</h2>
        <ul class='user_list'>
          <% @users.each do |user| %>
            <li class='list'>
                <%= link_to user_path(user.id), method: :get do %>
                <%= user.family_name %>
                <%= user.first_name %>
                <% end %>
            </li>
          <% end %>
        </ul>
      </div>  
    <% end %>
  <% end %>
</div>

