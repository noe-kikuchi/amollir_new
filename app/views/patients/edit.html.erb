<div class="new_edit">  
  <h2 class="new_edit_title">患者情報登録</h2>

  <%= form_for(@patient, url: patients_path) do |f| %>
    <%= render 'shared/error_messages', model: f.object %> 

    <div class="field">
      <%= f.label :family_name %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :family_name %>
    </div>
  
    <div class="field">
      <%= f.label :first_name %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :family_name_kana %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :family_name_kana , placeholder:"全角カタカナ" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :first_name_kana , placeholder:"全角カタカナ" %>
    </div>

    <div class="field">
      <%= f.label :birth_date_id %>
      <span class="indispensable">必須</span><br />
  
      <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
      </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birth_date_id,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>

    <div class="field">
      <%= f.label :phone_number %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :phone_number , placeholder:"半角数字ハイフンなし" %>
    </div>

    <div class="actions">
      <%= f.submit "登録" %>
      <p><%= link_to '戻る', root_path, class: "root_btn" %></p>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>